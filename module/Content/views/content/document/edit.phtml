?>
<form action="<?php echo $this->escapeHtml($this->form->getAttribute('action')); ?>" class="simple-form" method="post">
    <input id="input-save" type="image" alt="<?php echo $this->escapeHtml($this->translate('Save and publish')); ?>" value="1" src="/images/save.png">

    <div id="tabs" style="margin-bottom:20px">
        <?php echo $this->tabs; ?>

        <?php $fieldsets = $this->form->getFieldsets(); ?>
        <?php foreach($fieldsets as $tab_id => $fieldset): ?>
            <?php $errors = $fieldset->getMessages(); ?>
            <div id="<?php echo $this->escapeHtml($tab_id); ?>">
                <?php $elements = $fieldset->getElements(); ?>
                <?php foreach($elements as $element): ?>
                    <div>
                        <?php $content = $element->getAttribute('content'); ?>
                        <?php if(!empty($content)): ?>
                            <?php echo $content; ?>
                        <?php else: ?>
                            <?php $id = $element->getAttribute('id'); ?>
                            <label class="required"<?php if(!empty($id)): ?> for="<?php echo $this->escapeHtml($id); ?>"<?php endif; ?>><?php echo $this->escapeHtml($this->translate($element->getAttribute('label'))); ?></label>

                            <?php echo $this->formElement($element); ?>
                            <?php if(!empty($errors[$element->getAttribute('name')])): ?>
                                <?php echo $this->formErrors($errors[$element->getAttribute('name')]); ?>
                            <?php endif; ?>
                        <?php endif; ?>
                    </div>
                <?php endforeach; ?>
            </div>
        <?php endforeach; ?>
    </div>
</form>
<script type="text/javascript">
$(function(){
    jQuery('#tabs').tabs();
    Gc.saveCommand();
});
</script>
